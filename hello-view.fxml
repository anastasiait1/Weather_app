<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: black;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="org.example.pogodnik_app.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="label_pogoda" layoutX="108.0" text="Погода" textFill="WHITE">
      <font>
         <Font name="Segoe UI Bold" size="27.0" />
      </font></Label>
    <TextField fx:id="city" layoutX="85.0" layoutY="69.0" prefHeight="31.0" prefWidth="256.0" promptText="Введите город" />
    <Button fx:id="finder" layoutX="110.0" layoutY="112.0" mnemonicParsing="false" text="Узнать погоду" />
    <Label fx:id="info" layoutX="359.0" layoutY="204.0" text="ИНФОРМАЦИЯ" textFill="#f4efef">
      <font>
         <Font name="Segoe UI Bold" size="13.0" />
      </font></Label>
    <Label fx:id="temp" alignment="BASELINE_LEFT" layoutX="15.0" layoutY="200.0" text="Температура:" textFill="WHITE">
      <font>
         <Font name="Segoe UI Bold" size="12.0" />
      </font></Label>
    <Label fx:id="feels" layoutX="15.0" layoutY="232.0" text="Ощущается как:" textFill="WHITE" />

    <Label fx:id="min" layoutX="15.0" layoutY="300.0" text="Минимальная температура:" textFill="WHITE" />
    <Label fx:id="max" layoutX="15.0" layoutY="266.0" text="Максимальная температура:" textFill="#fffefe" />

    <Label fx:id="pressure" layoutX="15.0" layoutY="332.0" text="Давление:" textFill="WHITE">
      <font>
         <Font name="Segoe UI Bold" size="12.0" />
      </font></Label>

</VBox>
